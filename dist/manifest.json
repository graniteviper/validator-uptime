{
    "manifest_version": 3,
    "name": "Crypto Wallet Connector",
    "version": "1.0.0",
    "description": "Connect to crypto wallets installed as browser extensions",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }